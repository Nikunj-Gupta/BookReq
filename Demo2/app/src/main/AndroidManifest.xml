<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Book Request System"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Book Request System"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfterLoginUser"
            android:label="@string/title_activity_after_login_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookRequestActivity"
            android:label="@string/title_activity_book_request"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewRequestsActivityUser"
            android:label="@string/title_activity_view_requests_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewRequestsActivityAdmin"
            android:label="@string/title_activity_view_requests_activity_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewRequestsActivityLibrarian"
            android:label="@string/title_activity_view_requests_activity_librarian"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfterLoginAdmin"
            android:label="@string/title_activity_after_login_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfterLoginLibrarian"
            android:label="@string/title_activity_after_login_librarian"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddAdminActivity"
            android:label="@string/title_activity_add_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddLibrarianActivity"
            android:label="@string/title_activity_add_librarian"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
